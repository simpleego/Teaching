<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bookstore.book.mapper.BookMapper">

    <select id="searchBooks" resultType="com.bookstore.book.entity.Book">
        SELECT *
        FROM book
        <where>
            <choose>
                <when test="bookname != null and bookname != ''">
                    bookname LIKE CONCAT('%', #{bookname}, '%')
                </when>
                <when test="publisher != null and publisher != ''">
                    publisher LIKE CONCAT('%', #{publisher}, '%')
                </when>
                <when test="year != null and year != ''">
                    YEAR(year) LIKE CONCAT('%', #{year}, '%')
                </when>
            </choose>
        </where>
        ORDER BY
        <choose>
            <when test="sort == 'bookname'">bookname</when>
            <when test="sort == 'year'">year</when>
            <when test="sort == 'price'">price</when>
            <otherwise>bookid</otherwise>
        </choose>
        DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countBooks" resultType="int">
        SELECT COUNT(*)
        FROM book
        <where>
            <choose>
                <when test="bookname != null and bookname != ''">
                    bookname LIKE CONCAT('%', #{bookname}, '%')
                </when>
                <when test="publisher != null and publisher != ''">
                    publisher LIKE CONCAT('%', #{publisher}, '%')
                </when>
                <when test="year != null and year != ''">
                    YEAR(year) LIKE CONCAT('%', #{year}, '%')
                </when>
            </choose>
        </where>
    </select>

    <insert id="save" parameterType="com.bookstore.book.entity.Book">
        INSERT INTO Book (bookname, publisher, price, content, writer, year, originalFileName, storedFileName)
        VALUES (#{bookname}, #{publisher}, #{price},#{content}, #{writer}, #{year}, #{originalFileName}, #{storedFileName})
    </insert>


